#This file is modified at runtime by bootmenu.nsh

debug off
hiddenmenu
timeout		5
default		0

title $(normal_mode_title)
find --set-root --ignore-floppies $(kernel)
kernel $(kernel) debian-installer/custom-installation=$(custom_installation_dir) iso-scan/filename=$(iso_path) automatic-ubiquity noprompt quiet splash  boot=casper ro debian-installer/locale=$(locale) keyboard-configuration/layoutcode=$(keyboard_layout) keyboard-configuration/variantcode=$(keyboard_variant) -- $(accessibility)
initrd $(initrd)
boot

